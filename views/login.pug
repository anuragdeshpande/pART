extends ../public/assets/_bootstrap
block body
    .login-page
        .page-header.header-filter(filter-color='black')
            .page-header-image(style='background-image:url(/assets/img/login.jpg)')
            .content
                .container
                    .col-md-5.ml-auto.mr-auto
                        .card.card-login.card-plain
                            form.form(method='post' action='/login')
                                .card-header.text-center
                                    .logo-container
                                        img(src='/assets/img/now-logo.png' alt='')
                                .card-body
                                    +input-icon-left()(id = "username" name="username" placeholder="Username" class="users_circle-08")
                                    +input-icon-left()(id = "password" name="password" placeholder="Password" class="objects_key-25" type="password")
                                .card-footer.text-center
                                   +submit-primary-lg-block("Login")
                                .pull-left
                                    h6
                                        a.link.footer-link(href='#pablo') Create Account
                                .pull-right
                                    h6
                                        a.link.footer-link(href='#pablo') Forgot Password?